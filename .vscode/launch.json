    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "save profile",
            "type": "python",
            "request": "launch",
            "program": "src/another_swayrst/cli.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["save", "test_profile"]
        },
        {
            "name": "load profile",
            "type": "python",
            "request": "launch",
            "program": "src/another_swayrst/cli.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["-v", "DEBUG", "load", "test_profile"]
        },
        {
            "name": "show config",
            "type": "python",
            "request": "launch",
            "program": "src/another_swayrst/cli.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["--command-translation", "A", "B", "--command-translation", "C", "D","show-config"]
        }
    ]
}